constraintWidth = 1080px

@import './sutairu'

.constrained
  lost-center constraintWidth
  display flex

.logoText
  align-self center
  flex 1
  font-size 2em
  span:first-child
    color colPrimary
  span
    color colSecondary
nav
  align-self center
  ul
    margin 0
    li
      display inline-block
      margin-right 10px
      a
        color colPrimary
        &:hover
          color colSecondary

.navItemActive
  box-shadow 0px 4px colSecondary

main
  flex 1
  lost-center constraintWidth