{
  "name": "niru",
  "version": "1.0.0",
  "description": "Universal / isomorphic fullstack boilerplate",
  "main": "client.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && node ./dist/server",
    "build": "rm -rf ./dist && yarn run build:server && yarn run build:client",
    "build:client": "webpack -p --config webpack.config.client.js",
    "build:server": "webpack -p --config webpack.config.server.js",
    "dev": "rm -rf ./dist && npm-run-all --parallel dev:client dev:server",
    "dev:server": "rm -rf ./dist && webpack --config webpack.config.server.js",
    "dev:client": "webpack-dev-server --config webpack.config.client.js"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "express": "^4.15.0",
    "normalize.css": "^5.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",
    "css-loader": "^0.26.2",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^1.3.3",
    "start-server-webpack-plugin": "^2.1.2",
    "style-loader": "^0.13.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.5.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-node-externals": "^1.5.4"
  }
}
