{
  "name": "naito",
  "version": "1.0.0",
  "description": "Universal / isomorphic fullstack boilerplate",
  "main": "client.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node ./dist/server",
    "build": "rm -rf ./dist && npm run build:server && npm run build:client",
    "build:client": "webpack -p --config webpack.config.client.js",
    "build:server": "webpack -p --config webpack.config.server.js",
    "dev": "rm -rf ./dist && npm-run-all --parallel dev:server dev:client",
    "dev:server": "rm -rf ./dist && webpack --config webpack.config.server.js",
    "dev:client": "webpack-dev-server --config webpack.config.client.js"
  },
  "dependencies": {
    "express": "^4.15.0",
    "preact": "^7.2.0",
    "preact-compat": "^3.13.1",
    "pug": "^2.0.0-beta11",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",
    "css-loader": "^0.26.2",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^1.3.3",
    "start-server-webpack-plugin": "^2.1.2",
    "style-loader": "^0.13.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.5.0",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony",
    "uglifyjs-webpack-plugin": "^0.2.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-node-externals": "^1.5.4"
  }
}
