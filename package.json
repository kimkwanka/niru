{
  "name": "niru",
  "version": "2.6.0",
  "description": "Universal / isomorphic fullstack boilerplate",
  "main": "server/server.js",
  "repository": "git@github.com:kimkwanka/niru.git",
  "author": "Kim Kwanka <kimkwanka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "release:dry": "standard-version --dry-run",
    "release": "standard-version",
    "lint": "eslint client server --ext .js,.jsx",
    "clean": "rimraf dist",
    "test": "run-s clean && jest --coverage",
    "test:watch": "run-s clean && jest --watchAll",
    "start": "run-s build serve",
    "build": "run-s clean && run-p build:server build:client",
    "build:client": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.server.js",
    "serve": "cross-env NODE_ENV=production nodemon dist/server.js",
    "dev": "run-s clean && webpack --config webpack.server.js --watch"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "js,jsx"
  },
  "sideEffects": [
    "*.css",
    "*.styl"
  ],
  "devDependencies": {
    "@babel/register": "^7.7.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.10.0",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "jest": "^26.6.3",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.4",
    "reload": "^3.0.3",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "webpack-dev-middleware": "^4.1.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^3.0.0",
    "webpack-shell-plugin-next": "^2.2.2"
  },
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "assets-webpack-plugin": "^7.1.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "ip": "^1.1.5",
    "mini-css-extract-plugin": "^1.6.0",
    "nodemon": "^2.0.2",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^5.2.0",
    "prop-types": "^15.7.2",
    "purgecss-webpack-plugin": "^4.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hot-loader": "^4.12.18",
    "react-redux": "^7.1.3",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "rimraf": "^3.0.0",
    "style-loader": "^2.0.0",
    "stylus": "^0.54.7",
    "stylus-loader": "^5.0.0",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3"
  }
}
