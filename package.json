{
  "name": "niru",
  "version": "2.3.2",
  "description": "Universal / isomorphic fullstack boilerplate",
  "main": "server/server.js",
  "repository": "git@github.com:kimkwanka/niru.git",
  "author": "Kim Kwanka <kimkwanka@gmail.com>",
  "license": "MIT",
  "scripts": {
    "release:dry": "standard-version --dry-run",
    "release": "standard-version",
    "lint": "eslint client server --ext .js,.jsx",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "start": "run-s build serve",
    "build": "run-s build:clean && run-p build:server build:ssr build:client",
    "build:clean": "rimraf dist",
    "build:client": "NODE_ENV=production webpack --config webpack.prod.js",
    "build:ssr": "NODE_ENV=production webpack --config webpack.ssr.js",
    "build:server": "babel server -d dist",
    "serve": "NODE_ENV=production nodemon dist/server.js",
    "dev": "run-s build:clean && webpack --config webpack.ssr.js --watch"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "js,jsx"
  },
  "sideEffects": [
    "*.css",
    "*.styl"
  ],
  "devDependencies": {
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.1.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "reload": "^2.4.0",
    "standard-version": "https://github.com/kimkwanka/standard-version.git",
    "supertest": "^3.4.2",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin-next": "^0.6.4"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "assets-webpack-plugin": "^3.9.7",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "body-parser": "^1.18.3",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.10",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "ip": "^1.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "nodemon": "^1.18.10",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prop-types": "^15.7.2",
    "purgecss-webpack-plugin": "^1.4.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.7.0",
    "react-redux": "^6.0.0",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1"
  }
}
