{
  "name": "niru",
  "version": "1.0.0",
  "description": "Universal / isomorphic fullstack boilerplate",
  "main": "client.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server",
    "build": "yarn run copyassets && yarn run build:server && yarn run build:client",
    "build:client": "webpack -p --config webpack.config.client.js",
    "build:server": "webpack -p --config webpack.config.server.js",
    "build:start": "yarn build && node ./dist/server",
    "copyassets": "rimraf ./dist && mkdirp ./dist/public && ncp ./src/assets/ ./dist/public/",
    "dev": "yarn run copyassets && npm-run-all --parallel dev:client dev:server",
    "dev:server": "webpack --config webpack.config.server.js",
    "dev:client": "webpack-dev-server --config webpack.config.client.js",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.3",
    "babel-core": "^6.23.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.2.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.28.5",
    "express": "^4.15.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "normalize.css": "^7.0.0",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.8",
    "purify-css": "https://github.com/kimkwanka/purifycss.git",
    "purifycss-webpack": "^0.7.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "3.0.0-beta.6",
    "react-redux": "^5.0.3",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "rimraf": "^2.6.1",
    "start-server-webpack-plugin": "^2.1.2",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "^3.5.5",
    "webpack-node-externals": "^1.5.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "npm-run-all": "^4.0.2",
    "webpack-dev-server": "^2.4.1"
  }
}
